{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>News index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Content</th>
                <th>Link</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Video1</th>
                <th>Video2</th>
                <th>Tag</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td>{{ news.author }}</td>
                <td>{{ news.title }}</td>
                <td>{{ news.summary }}</td>
                <td>{{ news.content }}</td>
                <td>{{ news.link }}</td>
                <td>{{ news.image1 }}</td>
                <td>{{ news.image2 }}</td>
                <td>{{ news.video1 }}</td>
                <td>{{ news.video2 }}</td>
                <td>{{ news.tag }}</td>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_new') }}">Create new</a>
{% endblock %}
